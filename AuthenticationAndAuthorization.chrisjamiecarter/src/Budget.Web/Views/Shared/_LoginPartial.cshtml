@using Budget.Infrastructure.Entities
@using Microsoft.AspNetCore.Identity

@inject SignInManager<BudgetUserEntity> SignInManager
@inject UserManager<BudgetUserEntity> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Transactions", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
</ul>
